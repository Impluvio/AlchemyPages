@page
@model AlchemyPages.Pages.Ingredients.DeleteIngredientModel
@{
}

<h2 class="text-center mb-3 " style="color: red">Are you sure you want to delete this Ingredient? </h2>

<div>
    <p class="text-centre mb-3" style="color: dimgrey">@Model.Ingredient.Name</p>

    <form method="post">

        <input type="hidden" asp-for="Ingredient.Id" />
        <button type="submit" class="btn btn-danger"> Yes, Delete</button>
        <a asp-page="/Ingredients/Index" class="btn btn-secondary">Cancel</a>
    </form>

</div>
@page
@model AlchemyPages.Pages.Players.EditPlayerModel
@{
}

<h2 class="text-center mb-3">Edit Player</h2>

<form method="post">

    <div class="row g-2 mb-3">

        <div class="col-lg-6">

            <div class="card h-100">


                <div class="card-header">
                    Player Details
                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Ingredient Id</label>
                    <div class="col-sm-8">
                        <input class="form-control-plaintext" readonly value="@Model.Player.PlayerID">

                    </div>

                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Player First Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="playerCreate.FirstName">
                        <span asp-validation-for="playerCreate.FirstName" class="text-danger"> </span>
                    </div>

                </div>

                <div class="row mb-3">
                    <label class="col-sm-4 col-form-label">Player Last Name</label>
                    <div class="col-sm-8">
                        <input class="form-control" asp-for="playerCreate.LastName">
                        <span asp-validation-for="playerCreate.LastName" class="text-danger"> </span>
                    </div>

                </div>



                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-outline-primary" asp-page="/Players/Index" role="button">cancel</a>


            </div>

        </div>

    </div>

</form>